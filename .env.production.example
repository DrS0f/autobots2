# Instagram Automation - Production Environment Configuration
# Copy this file to .env.production and update with production values

# MongoDB Configuration (CHANGE THESE!)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MONGO_APP_USERNAME=instagram_app
MONGO_APP_PASSWORD=CHANGE_ME_APP_PASSWORD_HERE
DB_NAME=instagram_automation_prod

# Backend Configuration
REENGAGEMENT_DAYS_DEFAULT=30
RATE_LIMIT_STEPS=60,120,300,600
COOLDOWN_AFTER_CONSECUTIVE=3
COOLDOWN_MINUTES=45

# Frontend Configuration (Update with your domain)
REACT_APP_BACKEND_URL=https://api.yourdomain.com

# Production Settings
SEED_TEST_DATA=false
CLEANUP_TEST_DATA=false
NODE_ENV=production

# Logging
LOG_LEVEL=WARNING

# Security (recommended for production)
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# Backup Configuration
# BACKUP_S3_BUCKET=your-backup-bucket
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret

# Monitoring
# PROMETHEUS_ENABLED=true
# GRAFANA_ADMIN_PASSWORD=secure_grafana_password