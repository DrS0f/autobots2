# Instagram Automation - Environment Configuration
# Copy this file to .env and update values as needed

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_password_change_me
MONGO_APP_USERNAME=app_user
MONGO_APP_PASSWORD=app_password_change_me
DB_NAME=instagram_automation

# Backend Configuration
REENGAGEMENT_DAYS_DEFAULT=30
RATE_LIMIT_STEPS=60,120,300,600
COOLDOWN_AFTER_CONSECUTIVE=3
COOLDOWN_MINUTES=45

# Frontend Configuration  
REACT_APP_BACKEND_URL=http://localhost:8000

# Development Settings
SEED_TEST_DATA=true
CLEANUP_TEST_DATA=false
NODE_ENV=development

# Logging
LOG_LEVEL=INFO

# Optional: External services (uncomment and configure as needed)
# SENTRY_DSN=your_sentry_dsn_here
# REDIS_URL=redis://localhost:6379
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password